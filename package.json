{
  "name": "relectron",
  "version": "1.0.0",
  "author": {
    "name": "Krisztian Kecskes",
    "url": "https://kecsk.me"
  },
  "main": "./index.js",
  "repository": "https://github.com/krisztiankecskes/relectron.git",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.2",
    "electron-builder": "^20.38.5",
    "electron-prebuilt": "^1.4.13",
    "electron-reload": "^1.4.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^4.0.0-beta.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1",
    "webpack-synchronizable-shell-plugin": "^0.0.7"
  },
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "scripts": {
    "start": "npm-run-all -s clean-build watch",
    "build": "npm-run-all -s clean-build webpack-build",
    "watch": "npm run webpack -- --mode=development --env.env=dev --watch",
    "webpack-build": "npm run webpack -- --mode=production --env.env=prod",
    "webpack": "webpack",
    "electron-dev": "cross-env NODE_ENV=development electron index.js",
    "clean-build": "rimraf build",
    "clean-dist": "rimraf dist",
    "build-windows": "npm run clean-dist && npm run build && electron-builder -w"
  },
  "build": {
    "directories": {
      "buildResources": "./build"
    },
    "files": [
      "**/*",
      "build/**/*"
    ],
    "win": {
      "target": "msi",
      "icon": "./src/icons/icon.ico"
    }
  }
}
